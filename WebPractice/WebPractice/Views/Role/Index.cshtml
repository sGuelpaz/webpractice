@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{ ViewData["Title"] = "Index"; }

<div class="content-wrapper pt-3">
    <h1 class="text-center text-success">Lista de Usuarios</h1>
    <hr />
    <div class="container pt-3">
        <div class="row">
            <div class="mx-auto">
                <div class="col-lg-12">
                    @if (Model.Count == 0)
                    {
                        <p>No hay usuarios</p> }
                    else
                    {
                        <table class="table table-striped table-bordered">
                            <thead class="text-white" style="background-color: #343A40">
                                <tr>
                                    <th>Usuarios</th>
                                    <th>Roles del usuario</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in Model)
                                {
                                    <tr>
                                        <td>@u.UserName</td>
                                        <td>
                                            <a class="btn btn-success btn-sm" asp-route-userId="@u.Id" asp-action="Details">Ver Detalle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>