@model LoginUsuarios
@{ 
    ViewData["Title"] = "Acceso de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="container mt-3 p-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card card-primary shadow card-outline">
                    <div class="card-header"><h3 class="text-success">Bienvenido - Inicio de sesión</h3></div>
                    <div class="card-body">
                        <form asp-controller="Cuentas" asp-action="Acceso" method="post">
                            <div class="input-group mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Correo"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <input asp-for="Password" class="form-control" placeholder="Contraseña" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="custom-check">
                                    <label asp-for="Rememberme">
                                        <input asp-for="Rememberme" />
                                        @Html.DisplayNameFor(m => m.Rememberme)
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-success w-100 btn-lg">Ingresar <i class="bi bi-arrow-right-circle-fill"></i></button>
                                    <p><a asp-action="Registro">Registrarse como un nuevo usuario</a> </p>
                                    <p><a asp-action="OlvidoPassword">¿Olvidaste tu contraseña?</a> </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}